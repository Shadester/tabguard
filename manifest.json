{
  "manifest_version": 3,
  "name": "TabGuard",
  "version": "1.0.0",
  "description": "Guard your tabs from closing or navigating away from the current page",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
